<div class="page-content col-xs-10 col-xs-offset-1">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Saying</th>
        <th>Author</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= for quote <- @quotes do %>
        <tr>
          <td><%= link quote.saying, to: quote_path(@conn, :show, quote.id) %></td>
          <td><%= quote.author %></td>
          <td>
            <%= link "Edit", to: quote_path(@conn, :edit, quote.id), class: "btn btn-danger" %>
            <%= link "Delete", to: quote_path(@conn, :delete, quote.id), method: :delete, class: "rest btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
